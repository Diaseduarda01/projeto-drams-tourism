	<script>
		// Fun√ß√£o para recuperar e exibir os pacotes
		function carregarPacotes() {
			// Substitua pela URL correta da sua API
			var apiUrl = '/dreamstourism/admin/api/pacotes';

			fetch(apiUrl)
				.then(response => response.json())
				.then(pacotes => {
					var container = document.getElementById('pacotes-container');

					pacotes.forEach(function (pacote) {
						var card = document.createElement('div');
						card.className = 'card card-item';
						card.innerHTML = `
						
                        <img src="data:image/png;base64,${pacote.fotoString}"  alt="${pacote.nomePacote}" > 
                           <br><br> <h2>${pacote.nomePacote}</h2>
                            <p><strong> üíµ A partir de:</strong> R$ ${pacote.preco.toFixed(2)}</p>
                            <p><strong>Dura√ß√£o:</strong> ${pacote.duracao} </p>
                            <p><strong></strong> ${pacote.descricaoLugar}</p>
							 <a href="/dreamstourism/users/dreams/pacote/${pacote.id}">
    						<button class="btn btn-primary" style="background-color: #8c54ff; color: #fff; 
    						border: none; position: relative; width:50%; left: 25%;" >Ver Detalhes</button>
							</a>
						 
                            
                        `;

						container.appendChild(card);
					});
				})
				.catch(error => {
					console.error('Erro ao recuperar os pacotes do backend:', error);
				});
		}

		// Chame a fun√ß√£o para carregar os pacotes quando a p√°gina carregar
		window.addEventListener('load', carregarPacotes);
	</script>

